@model IEnumerable<TEST_APP_MVC.Models.Product>
@{
    /**/
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="mydiv">

    <h2>My Name is: @ViewData["MyName"] @ViewBag.MyLastName</h2>

    

    <ul>
        @foreach (var item in ViewData["Product"] as IList<TEST_APP_MVC.Models.Product>)
        {
            <li>
                @item.Name
            </li>
        }

        @foreach (var item in ViewBag.Product)
        {
            <li>
                @item.Id
            </li>
        }

        @foreach (var item in TempData["Product"] as IList<TEST_APP_MVC.Models.Product>)
        {
            <li>
                @item.Name
            </li>

        }


        @*========================================*@

        <h2>@TempData.Peek("name").ToString()</h2>


    </ul>

    <table>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name) </th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
        </tr>




        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    <td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    <td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    <td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    <td>
                </tr>
            }
        }

    </table>

</div>
